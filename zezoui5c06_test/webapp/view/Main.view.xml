<mvc:View controllerName="zezoui5c06test.controller.Main" 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:f="sap.f">
    <f:DynamicPage toggleHeaderOnTitleClick="false">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Register Business Partner" level="H1"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <VBox fitContainer="true">
                <Table id="productTable" inset="false" 
                 items="{
							path: '/zezo_bpSet',
                            sorter: [{
                            path : 'Bpcode',
                            ascending : true
                            }]

						}"
                class="sapFDynamicPageAlignContent" width="auto">
                <headerToolbar>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="ADD" press="onAdd" type="Emphasized"/>
					</OverflowToolbar>
		        </headerToolbar>
                    <columns>
                        <Column hAlign="Begin">
                            <ObjectIdentifier title="거래처코드"  />
                        </Column>
                         <Column hAlign="Center" >
                            <ObjectIdentifier title="회사명"  />
                        </Column>
                        <Column hAlign="End">
                            <ObjectIdentifier title="거래처유형"  />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onListItemPress">
                            <cells>
                                <ObjectIdentifier  title="{Bpcode}" />
                            </cells>
                            <cells>
                                <ObjectIdentifier  title="{Bpname}"/>
                            </cells>
                            <cells>
                                <ObjectIdentifier  title="{Bptype}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>
