<core:FragmentDefinition xmlns:core="sap.ui.core" 
xmlns="sap.m">
<Dialog id="addDialog" title="add" beforeOpen="onBeforeOpen">
    <content>
        <HBox height="60px" alignItems="Center" justifyContent="Center">
            <Label text="Content" class="sapUiSmallMarginEnd" ></Label>
            <Input id="addInput" value="{root>/value}" ></Input>
            <!-- root모델의 value는 정해주지 않았지만, 자동으로 생성됨. -->
        </HBox>
        <!-- <Text text="add하시겠습니까?"></Text> -->
    </content>

    <endButton>
        <!-- .은 현재 위치 라는 의미 -->
        <Button text="close" press=".onClose"> 
        </Button>
    </endButton>
</Dialog>
</core:FragmentDefinition>