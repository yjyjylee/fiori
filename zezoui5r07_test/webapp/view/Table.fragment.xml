<core:FragmentDefinition xmlns:core="sap.ui.core" 
xmlns="sap.m" xmlns:t="sap.ui.table" xmlns:l="sap.ui.layout">
<Dialog id="idTable" title="사원List" beforeOpen="onBeforeOpen" contentWidth="40%">
    <content>
        <t:Table 
				id="empTable"
				rows="{ path: 'FilterModel>/data'
				}"
				visibleRowCount="8"
                selectionMode="Single"
				paste="onPaste"
				ariaLabelledBy="title"
				rowSelectionChange="aaa"
				selectionBehavior="RowOnly">
				<t:columns>
					<t:Column >
						<ObjectIdentifier title="Pernr"  />
						<t:template>
							<Text text="{FilterModel>Pernr}" />
						</t:template>
					</t:Column>
                    <t:Column >
						<ObjectIdentifier title="Name"/>  
						<t:template>
							<Text text="{FilterModel>Name}" />
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
    </content>

    <endButton>
        <!-- .은 현재 위치 라는 의미 -->
        <Button text="close" press="onClose"> 
        </Button>
    </endButton>
</Dialog>
</core:FragmentDefinition>