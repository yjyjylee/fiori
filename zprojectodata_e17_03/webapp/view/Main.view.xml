									<!-- <m:Column>
										<m:Text text="Custom Sum" />
									</m:Column>
									<m:Column>
										<m:Text text="Result" />
									</m:Column> -->
								</m:columns>
								<m:items>
									<m:ColumnListItem vAlign="Middle">
										<m:cells>
											<m:Text text="{OrderID}" />
											<m:Text text="{CustomerID}" />
											<m:Text
												text="{
												path: 'OrderDate',
												formatter: '.formatter.dateTime'
											}" />
											<m:Text
												text="{
												path: 'RequiredDate',
												formatter: '.formatter.dateTime'
											}
											" />
											<m:Text
												text="{
												path: 'ShippedDate',
												formatter: '.formatter.dateTime'
											}
											" />
